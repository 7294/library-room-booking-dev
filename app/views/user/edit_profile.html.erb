<div class="container-fluid" style="margin:0px">

  <center>
    <h2 class="form-signin-heading wrapper">Edit Profile</h2>
  </center>
  <div class="wrapper">

    <%= form_tag({controller: "user", action: "save_profile_changes"}, method: "post", class: "form-signin") do %>



        <%= label_tag(:id, @userId.emailId, class: "form-control") %>
        <%= hidden_field_tag "id", @userId.emailId %>
        <br>
        <%= text_field_tag(:first_name, @userId.first_name, class: "form-control") %>
        <br>
        <%= text_field_tag(:last_name, @userId.last_name, class: "form-control") %>
        <br>
        <%= password_field_tag(:password, nil, placeHolder: "Password", class: "form-control") %>
        <%= password_field_tag(:cpassword, nil, placeHolder: "Confirm Password", class: "form-control") %>
        <%= submit_tag("Apply Changes", :class => "btn btn-lg btn-primary btn-block") %>

    <% end %>

  </div>
</div>