<div class="container-fluid" style="margin:0px">

  <center>
    <h2 class="form-signin-heading wrapper">Create New Admin </h2>
  </center>
  <div class="wrapper" >
  </div>

  <%- # Form for creating an admin object. -%>
  <%- # Display errors, if any -%>
  <div class="flash"> <%= flash[:error] %> </div>


  <%= form_tag({controller: "admin", action: "new_admin"}, method: "post", class: "form-signin") do %>

         <h2 class="form-signin-heading"> Please provide new admin details </h2>

      <%= email_field_tag(:id, nil, placeHolder: "Email Address", class: "form-control") %>
      <br>
      <%= password_field_tag(:password, nil, placeHolder: "Password", class: "form-control") %>
      <%= password_field_tag(:cpassword, nil, placeHolder: "Confirm Password", class: "form-control") %>
      <%= text_field_tag(:fname, nil, placeHolder: "First Name", class: "form-control") %>
      <%= text_field_tag(:lname, nil, placeHolder: "Last Name", class: "form-control") %>
      <br>
      <%= submit_tag("Create Admin", :class => "btn btn-lg btn-primary btn-block") %>

  <% end %>

</div>